{% extends "base.html" %}
{{page_title}}
{{page_css}}
{% block content %}
		<div id="navbar">
			<ul class="tabs">
				<li><a href="/kotw/hq/">Command Center</a></li>
				<li><a href="/kotw/explore/">Explore</a></li>
				<li><a href="/kotw/build/">Build</a></li>
				<li><a href="/kotw/military/">Military</a></li>
				<li><a href="/kotw/research/">Research</a></li>
				<li><a href="/kotw/attack/">Attack</a></li>
				<li><a href="/kotw/ranks/">Ranking</a></li>
				<li><a href="/kotw/logout/">Logout</a></li>
			</ul>
		</div>
		<div id="information">
			<table border="1">
				<tr>
					<th>Gold</th>
					<th>Food</th>
					<th>Oil</th>
					<th>Population</th>
					<th>Land</th>
				</tr>
				<tr>
					<td>{{country_gold}}</td>
					<td>{{country_food}}</td>
					<td>{{country_oil}}</td>
					<td>{{country_pop}}</td>
					<td>{{country_land}}</td>
				</tr>
			</table>
		</div>
		<div id="content">
			<br/>Each building costs ${{building_cost}} to build.
			<br/>You have enough resources to build {{max_buildings}} acres.
			<br/>
			<br/><form action="/kotw/build/" method="POST">{% csrf_token %}Unused land: {{unused}}
				<table border="1">
					<tr><th>Building</th><th>You Own</th><th></th></tr>
					<tr><td>Farms</td><td>{{farms}}</td><td><input type="number" min="0" max="{{max_buildings}}" value="0" name="build"/></td></tr>
					<tr><td>Enterprises</td><td>{{enterprise}}</td><td><input type="number" min="0" max="{{max_buildings}}" value="0" name="build"/></td></tr>
					<tr><td>Residences</td><td>{{residences}}</td><td><input type="number" min="0" max="{{max_buildings}}" value="0" name="build"/></td></tr>
					<tr><td>Industrial</td><td>{{industrial}}</td><td><input type="number" min="0" max="{{max_buildings}}" value="0" name="build"/></td></tr>
					<tr><td>Military Bases</td><td>{{bases}}</td><td><input type="number" min="0" max="{{max_buildings}}" value="0" name="build"/></td></tr>
					<tr><td>Research Labs</td><td>{{labs}}</td><td><input type="number" min="0" max="{{max_buildings}}" value="0" name="build"/></td></tr>
					<tr><td>Oil rigs</td><td>{{oil_rigs}}</td><td><input type="number" min="0" max="{{max_buildings}}" value="0" name="build"/></td></tr>
				</table>
				<input type="submit" value="Build"/>
				<br/>{{msgs}}
			</form>
		</div>
{% endblock %}
