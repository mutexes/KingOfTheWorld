{% extends "base.html" %}
{{page_title}}
{{page_css}}
{% block content %}
<div id="navbar">
    <ul class="tabs">
        <li><a href="/kotw/hq/">Command Center</a></li>
        <li><a href="/kotw/explore/">Explore</a></li>
        <li><a href="/kotw/build/">Build</a></li>
        <li><a href="/kotw/military/">Military</a></li>
        <li><a href="/kotw/research/">Research</a></li>
        <li><a href="/kotw/attack/">Attack</a></li>
        <li><a href="/kotw/ranks/">Ranking</a></li>
        <li><a href="/kotw/logout/">Logout</a></li>
    </ul>
</div>

<div id="information">
    <table border="1">
        <tr>
            <th>Gold</th>
            <th>Food</th>
            <th>Oil</th>
            <th>Population</th>
            <th>Land</th>
        </tr>
        <tr>
            <td>{{country_money}}</td>
            <td>{{country_food}}</td>
            <td>{{country_oil}}</td>
            <td>{{country_pop}}</td>
            <td>{{country_land}}</td>
        </tr>
    </table>
</div>

<div id="content">
    <ul>
        <li>Country: {{country_name}}</li>
        <li>Leader: {{country_user}}</li>
        <li>
            <form action="/kotw/hq/" method="POST">{% csrf_token %}
                {{RevolutionForm}}<input type="submit", value="Start Revolution"/>
            </form>
        </li>
    </ul>
    <ul>
        <li>Land: {{country_land}}</li>
        <li>Population: {{country_pop}}</li>
        <li>Money: {{country_money}}</li>
        <li>Food: {{country_food}}</li>
        <li>Oil: {{country_oil}}</li>
    </ul>
    <ul>
        <li>Troops: {{country_troops}}</li>
        <li>Jets: {{country_jets}}</li>
        <li>Turrets: {{country_turrets}}</li>
        <li>Tanks: {{country_tanks}}</li>
        <li>Offensive Points: {{country_offense}}</li>
        <li>Defensive Points: {{country_defense}}</li>
    </ul>
</div>

<div id="news">
    {% block news %}
        {% if latest_news_list %}
        <ul>
            {% for news in latest_news_list %}
            <li>{{news.info}}</li>
            {% endfor %}
        </ul>
        {% endif %}
    {% endblock %}
</div>
{% endblock %}
